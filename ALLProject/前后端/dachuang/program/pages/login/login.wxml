<view class="topbar"></view>
<view class="content">
  <view class="header">
    <view class="headerText">
      <view class="headerText1">
        <text style="word-spacing: 70rpx auto;">欢迎!</text>
      </view>
      <view class="headerText2">
        <text>让我们开始吧!</text>
      </view>
    </view>
    <view>
      <image class="headerLogo" src="https://tse1-mm.cn.bing.net/th/id/OIP-C.4rZ4ZPxFnT6vMCad7bnPugHaHa?w=193&h=193&c=7&r=0&o=5&dpr=1.5&pid=1.7" mode="widthFix" />
