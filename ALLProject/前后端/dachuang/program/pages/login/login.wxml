    </view>
    <view class="protocol">
      <!-- <checkbox class="protocolBox"></checkbox> -->
      <view class="protocolText">
        <text>登录代表您已同意</text>
        <text class="protocolTextC" bindtap="gotoUserXY">《助业宝》</text>
