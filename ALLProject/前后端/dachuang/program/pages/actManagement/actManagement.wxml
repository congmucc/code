<view class="contain">

  <!-- 申请活动列表 -->
  <veiw class="itemList" wx:for="{{activity}}" wx:key="id">
    <!-- <navigator> -->
      <view class="text">
        <view class="text1">
          <view class="itemTitle">
            {{item.title}}
          </view>
          <view class="itemtxt">
            {{item.content}}
          </view>

          <view class="text2">
            <view class="itemTime">
              <!-- 用户确认人数：{{item.confirmNumber}}/{{item.totalNumber}} -->
              时间：{{item.startTime}} - {{item.endTime}}
            </view>
            <view class="itemSite">
              参与人数：{{item.number}}
            </view>
          </view>
          <view class="itemButtonView">
            <button class="itemButton" style="width:30vw;" bindtap="deleteActivity" data-id="{{item.id}}">删除</button>
            <button class="itemButton" style="width:30vw;" bindtap="changeActivity" data-id="{{item.id}}">修改</button>
          </view>

        </view>

      </view>
    <!-- </navigator> -->
  </veiw>
</view>