/* pages/login/login.wxss */
page{
  height: 100%;
  background-color: white;
  margin: 0px;
  padding: 0px;
}

/* 背景 */
.userInput {
  display: block;
  position: absolute;
  height: 100%;
  width: 100%;
  background: #e9f08ba6;
}
/* 白色边框view */
.userInput .userInputC {
  position: relative;
  margin-top: 150rpx;
  left: 100rpx; 
  width: 545rpx;
  height: 750rpx;
  background: #FFFFFF;
  border-radius: 50rpx;
}
/* 登录view */
.userInput .userInputC .logo {
  margin-top: 50rpx;
  position: absolute;
  margin-left: 50rpx;
  width: 150rpx;
  height: 100rpx;
  font-size: 60rpx;
  font-family: Helvetica;
  color: #000000;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

/* 用户输入框view */
.userInput .userInputC .userLogin {
  margin-top: 200rpx;
  margin-left: 35rpx;
  position: absolute;
  display: flex;
  width:450rpx ;
  height: 80rpx ;
  border-bottom: 3rpx solid rgb(58, 57, 57);
}

/* 用户输入框 */
.userInput .userInputC .userLogin .input {
  width: 200rpx;
  font-size: 25rpx ;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

/* 密码输入框view */
.userInput .userInputC .userPassword {
  margin-top: 400rpx;
  margin-left: 35rpx;
  position: absolute;
  display: flex;
  width:450rpx ;
  height: 80rpx ;
  border-bottom: 3rpx solid rgb(58, 57, 57);
}

/* 密码输入框 */
.userInput .userInputC .userPassword .input {
  width: 200rpx;
  font-size: 25rpx ;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

/* 立即注册和忘记密码view */
.userInput .userInputC .userAdd {
  font-size: 25rpx;
  margin-left: 85rpx;
  width: 370rpx;
  margin-top: 540rpx;
  position: absolute;
  display: flex;
  justify-content: space-between;
}

/* 登录按钮view */
.userInput .userInputC .submitT {
  width: 350rpx;
  height: 50rpx;
  position: absolute;
  margin-top: 600rpx;
  margin-left: 85rpx;
}
/* 登录按钮 */
.userInput .userInputC .submitT button {
  padding: 0rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

/* 复选框+协议文字容器view */
.userInput .userInputC .xieyi{
  margin-left: 10rpx;
  margin-top: 680rpx;
  width: 400rpx;
  display: flex;
  position: absolute;
}
/* 复选框 */
.userInput .userInputC .xieyi .isXY{
  margin-left: 85rpx;
  /* 修改复选框的大小 */
  transform:scale(.6);
}
/* 协议文本 */
.userInput .userInputC .xieyi .text-xy{
  margin-left: 10rpx;
  margin-top: 20rpx;
  color: #000000;
  font-size:18rpx;
}

.xieyiText {
  color: red;
  font-size: 20rpx;
}

/* 提示文本 */
.v3{
  padding-left: 100rpx;
  display: flex;
  position: relative;
  width: 100%;
  height: 60rpx;
  padding-top: 50rpx; 
}
.v3 .line{
  margin-left: 5rpx;
  margin-top: 18rpx;
  width: 120rpx;
  height: 3rpx;
 background-color:#f12a2a;
}
.v3 .lText{
  color: #f01e1e;
  font-size: 25rpx;
}

